@model IEnumerable<Core.Data.EntryDbModels.Product>
@{
    ViewData["Title"] = "All Products";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
        <h2 class="text-primary">
            Product List
        </h2>
    </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; Create New Product
            </a>
        </div>
    </div>
    <br/><br/>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="50%">@item.Price</td>
                    <td class="text-center">
                        <a asp-route-id="@item.Id" asp-action="Upsert" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product Exist.</p>
    }
</div>
