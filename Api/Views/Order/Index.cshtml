@model Infrastructure.DTOs.OrderListViewModel
<form method="get">
    <div class="container p-4 my-3">
        <h2 class="text-info">Orders Menegement</h2>
        <div class="border bg-white p-3" style="border-radius: 15px;">
            <div class="row">
                <div class="col-12">
                    <div class="row" style="padding-top: 10px" >
                        <div class="col-4">
                            @Html.Editor("searchName",new { htmlAttrinutes = new {@class="form-control"
                                ,@placeholder="Name" }})
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchEmail",new { htmlAttrinutes = new {@class="form-control"
                                ,@placeholder="Email" }})
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchPhone",new { htmlAttrinutes = new {@class="form-control"
                                ,@placeholder="Phone Number" }})
                        </div>
                    </div>
                    <div class="row pt-2">
                        <div class="col-4">
                            @Html.DropDownListFor(x => x.Status,Model.StatusListItems,"-- Order Status --",
                                new {@class="form-control"})
                        </div>
                        <div class="offset-4 col-4">
                            <button type="submit" class="h-100 btn btn-info form-control">
                                <i class="fas fa-search"></i>Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<ejs-grid id="Grid" dataSource="Model.OrderHeaders" allowFiltering="true" allowSorting="true" allowPaging="true">
            <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
            <e-grid-loadingIndicator indicatorType="Shimmer"></e-grid-loadingIndicator>
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
                <e-grid-column field="FullName" headerText="Name" textAlign="Right"></e-grid-column>
                <e-grid-column field="Email" headerText="Email" textAlign="Right"></e-grid-column>
                <e-grid-column field="PhoneNumber" headerText="Phone" textAlign="Right"></e-grid-column>
                <e-grid-column field="OrderStatus" headerText="Status" textAlign="Right"></e-grid-column>
                <e-grid-column field="OrderDate" headerText="Order Date" customFormat="@(new { type="date", format="dd/MM/yy"})" textAlign="Right"></e-grid-column>
                <e-grid-column field="Id" headerText="" width="70"
                               template="<a rel='nofollow' href='Order/Details/${Id}' class='btn btn-primary'> <i class='fas fa-list'></i></a>"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>