@model Core.Data.EntryDbModels.Product

<div class="col-lg-3 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ','_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left">@Model.Name</label></div>
            <div class="col-5"><label class="float-right"><span class="text-right text-info h5">@Model.Price.ToString("F2") лв.</span></label> </div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WebConstants.ImagePath@Model.Image" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100 text-dark" style="background-color:#ffbdd3">@Model.Category.Name</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100 text-dark" style="background-color:#bde0ff">@Model.Type.Name</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify" >
                <p>@Model.ShortDescription</p>
            </div>
            @if(Model.Type.Name == "Устройства"){
                <div class="col-12 pt-2" style="font-size:13px; text-align:center" >
                    <p>Наличност: @Model.Quantity бр.</p>
                </div>
            }
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>
</div>