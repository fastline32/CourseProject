@model Infrastructure.DTOs.HomeViewModel

<div class="container">
    <div class="text-center">
        @* <button class="btn btn-dark filter-button" data-filter="all">All</button> *@
        @foreach (var item in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@item.Name.Replace(' ', '_')">
                @item.Name
            </button>
        }
    </div>
    <br/>
    
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img decoding="async" loading="lazy" width="600" height="400" src="https://www.solarni-paneli-srbija.com/wp-content/uploads/2022/04/solarni-paneli.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img decoding="async" loading="lazy" width="600" height="400" src="https://www.solarni-paneli-srbija.com/wp-content/uploads/2022/04/ugradnja-solarnih-panela.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img decoding="async" loading="lazy" width="600" height="400" src="https://www.solarni-paneli-srbija.com/wp-content/uploads/2022/04/cena-i-garancija-solarni-paneli.jpg" class="d-block w-100" alt="">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    
    <br/>
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <partial name="_IndividualProductCard" model="item"/>
        }
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function(){
    
        $(".filter-button").click(function(){
    
            var value = $(this).attr('data-filter');
            if(value == "all")
            {
                $('.filter').show('1000');
            }
            else
            {
                $(".filter").not('.'+value).hide('3000');
                $('.filter').filter('.'+value).show('3000');
                
            }
        });
    
    });
    </script>
}
