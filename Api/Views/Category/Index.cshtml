@model IEnumerable<Core.Data.EntryDbModels.Category>
@{
    ViewData["Title"] = "All Categories";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
        <h2 class="text-primary">
            Category List
        </h2>
    </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>
    <br/><br/>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.DisplayOrder</td>
                    <td class="text-center">
                        <a asp-controller="Category" asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary">Edit</a>
                        <a asp-controller="Category" asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger"> Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category Exist.</p>
    }
</div>
